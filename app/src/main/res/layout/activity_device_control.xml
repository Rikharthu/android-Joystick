<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uberv.joystick.DeviceControlActivity">

    <TextView
        android:id="@+id/address_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Device address:"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/space"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/uuid_label_tv"
        app:layout_constraintStart_toEndOf="@+id/address_label_tv"
        app:layout_constraintTop_toTopOf="@+id/address_label_tv" />

    <TextView
        android:id="@+id/device_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toTopOf="@+id/address_label_tv"
        tools:text="192.168.17.136" />

    <TextView
        android:id="@+id/state_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="State:"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/address_label_tv"
        app:layout_constraintTop_toBottomOf="@+id/address_label_tv" />

    <TextView
        android:id="@+id/device_connection_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/device_address_tv"
        app:layout_constraintTop_toTopOf="@+id/state_label_tv"
        tools:text="Connected" />

    <TextView
        android:id="@+id/uuid_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="HM10 UUID:"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/state_label_tv" />

    <TextView
        android:id="@+id/hm10_uuid_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/device_connection_state_tv"
        app:layout_constraintTop_toBottomOf="@+id/device_connection_state_tv" />

    <Button
        android:id="@+id/send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uuid_label_tv" />

    <EditText
        android:id="@+id/data_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="data"
        app:layout_constraintStart_toEndOf="@+id/send_btn"
        app:layout_constraintTop_toTopOf="@+id/send_btn"
        app:layout_constraintBottom_toBottomOf="@+id/send_btn"
        android:layout_marginBottom="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
